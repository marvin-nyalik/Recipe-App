<h1>Shopping List</h1>

<div class="">
    <div class="">
        <p>Amount of food to buy: </p>
        <p>Total value of food needed</p>
    </div>
    <div class="">
        <p>Recipe: <span>Recipe 2</span></p>
        <p>Inventory: <span>Inventory 2</span></p>
    </div>
</div>

    <div class="flex flex-col">
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
                <div class="overflow-hidden">
                    <table class="min-w-full text-left text-sm font-light">
                        <thead class="border-b font-medium dark:border-neutral-500">
                            <tr>
                                <th scope="col" class="px-6 py-4">Food</th>
                                <th scope="col" class="px-6 py-4">Quantity</th>
                                <th scope="col" class="px-6 py-4">Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @recipe.recipe_foods.each do |food| %>
                                <tr
                                    class="border-b transition duration-300 ease-in-out hover:bg-neutral-100 dark:border-neutral-500 dark:hover:bg-neutral-600">
                                    <td class="whitespace-nowrap px-6 py-4">
                                        <%= food.food.name %>
                                    </td>
                                    <td class="whitespace-nowrap px-6 py-4">$ <%= food.food.price*food.quantity %>
                                    </td>
                                    <td class="whitespace-nowrap px-6 py-4">$ <%= food.food.price %>
                                    </td>
                                </tr>
                                <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
